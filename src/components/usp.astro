---
// @ts-ignore
import { Icon } from "astro-icon";
const features = [
    {
        title: "Verlichting werkzaamheden",
        description:
            "Wij zorgen ervoor dat",
        icon: "bx:bxs-briefcase",
    },
    {
        title: "Storingen",
        description:
            "Wij zorgen ervoor dat storingen opgelost worden",
        icon: "bx:bxs-window-alt",
    },
    {
        title: "Meterkast werkzaamheden",
        description: "Meterkast is het hart van elektriciteit",
        icon: "bx:bxs-data",
    },
    {
        title: "Inductiekookplaat werkzaamheden",
        description: "Koken op Inductiekookplaat",
        icon: "bx:bxs-bot",
    },
];
---

<div class="bg-darkblue py-14">
    <div class="container mx-auto px-4 max-w-5xl">
        <div class="text-center my-8 mb-20">
            <h2 class="text-white text-2xl lg:text-3xl font-bold lg:tracking-tight">Met welke werkzaamheden kunnen wij jou helpen?</h2>
        
        </div>
        <div class="grid sm:grid-cols-2 md:grid-cols-3 mt-4 gap-4">
            {
                features.map((item) => (
                    <div class="flex gap-4 items-start text-center bg-white rounded-lg shadow-md py-20 px-7">
                        <div>
                            {/*<Icon class="h-20 w-20 mx-auto" name={item.icon} />*/}
                            <h3 class="font-bold text-xl mt-4">{item.title}</h3> <p class="mt-2 py-5">{item.description}</p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</div>
