---
import { Picture } from "@astrojs/image/components";
import headerImage from "assets/elektricien-hero.svg";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
import Container from "@components/container.astro";
---

<div class="d-sm-flex align-items-center justify-content-between w-100" style="height: 100vh;">
  <div class="col-md-4 mx-auto mb-4 mb-sm-0 headline px-5 mt-5">
    <h1 class="display-4 my-4 font-weight-bold">Uit eten met korting bij de beste restaurants in <span style="color: #9B5DE5;">Nederland</span></h1>
    <a href="#lastadded" class="btn px-5 py-3 text-white mt-3 mt-sm-0" style="border-radius: 30px; background-color: #9B5DE5;">Bekijk restaurants</a>
  </div>
  <!-- in mobile remove the clippath -->
  <div class="col-md-8 h-100 clipped" style="min-height: 350px; background-image: url(https://images.unsplash.com/photo-1528605248644-14dd04022da1?q=80&w=3570&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D); background-position: center; background-size: cover;">

  </div>
</div>
