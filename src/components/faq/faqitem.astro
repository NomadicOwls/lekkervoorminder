---
const {question, answer, index} = Astro.props
---

<div>
    <div id={`faq-item-heading-${index}`}>
        <button
            type="button"
            class="flex items-center justify-between w-full p-5 font-medium text-lg text-left text-gray-500 border border-gray-200 rounded-lg focus:ring-0 mb-5"
            data-accordion-target={`#faq-item-body-${index}`}
            aria-expanded="false"
            aria-controls={`faq-item-body-${index}`}>
            <span>{question}</span>
            <svg
                data-accordion-icon
                class="w-6 h-6 rotate-180 shrink-0"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
                ><path
                    fill-rule="evenodd"
                    d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                    clip-rule="evenodd"></path></svg
            >
        </button>
    </div>
    <div id={`faq-item-body-${index}`} class="hidden" aria-labelledby={`faq-item-heading-${index}`}>
        <p>{answer}</p>
    </div>
</div>