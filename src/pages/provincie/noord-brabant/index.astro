---
import Container from "@components/container.astro";
import PricingTables from "@components/pricingTables.astro";
import Services from "@components/services.astro";

import Hero from "@components/hero.astro";
import Layout from "@layouts/Layout.astro";
import Content from "@components/content.astro";
import Sticky from "@components/sticky.astro";
import Modal from "@components/modal.astro";
import Testimonials from "@components/testimonials.astro";
---


<Layout title="Uit eten met korting in Nederland">
  <div class="d-sm-flex align-items-center justify-content-between w-100" style="height: 100vh;">
  <div class="col-md-4 mx-auto mb-4 mb-sm-0 headline px-5">
    <h1 class="display-4 my-4 font-weight-bold">Uit eten met korting bij de beste restaurants in <span style="color: #9B5DE5;">Noord-Brabant</span></h1>
    <a href="#lastadded" class="btn px-5 py-3 text-white mt-3 mt-sm-0" style="border-radius: 30px; background-color: #9B5DE5;">Bekijk restaurants</a>
  </div>
  <!-- in mobile remove the clippath -->
  <div class="col-md-8 h-100 clipped" style="min-height: 350px; background-image: url(https://images.unsplash.com/photo-1541544348958-c19138585962?q=80&w=3688&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D); background-position: center; background-size: cover;">

  </div>
</div>

  <Container>
       <main id="main">


   <section class="section gray-bg" id="lastadded">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-12">
                        <div class="section-title">
                            <h2>Restaurants in Herpen</h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="blog-grid">
                            <div class="blog-img">
                                <!-- <div class="date">04 FEB</div> -->
                                <a href="/provincie/noord-brabant/yume-herpen-all-you-can-eat-sushi">
                                    <img src="https://www.yumeherpen.nl/wp-content/uploads/2024/04/DSC03985-1536x1024.webp" title="" width="350" alt="">
                                </a>
                            </div>
                            <div class="blog-info">
                                <h5><a href="/provincie/noord-brabant/yume-herpen-all-you-can-eat-sushi" target="_blank">25% korting bij Yume Herpen voor elke 2e persoon</a></h5>
                                <p>Gezellig uit eten bij all you can eat sushi restaurant Yume herpen met 25% korting voor elke 2e persoon.</p>
                                <div class="btn-bar">
                                    <a href="/provincie/noord-brabant/yume-herpen-all-you-can-eat-sushi" class="px-btn-arrow">
                                        <span>Reserveren</span>
                                        <i class="arrow"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                   
                </div>
            </div>
        </section>

  
  </main><!-- End #main -->
  </Container>
</Layout>
